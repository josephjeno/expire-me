<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".AddItemActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/add_item_name"
        android:textSize="25sp" />

    <AutoCompleteTextView
        android:id="@+id/add_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLength="18"
        android:inputType="text"
        android:hint="@string/add_item_name_hint" />

    <TextView
        android:text="@string/add_item_expiration_date"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextExpirationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:ems="10"
        android:focusable="false"
        android:inputType="date"
        android:hint="@string/add_item_expiration_date_hint" />

    <TextView
        android:text="@string/add_item_note"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/add_item_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:imeOptions="actionDone"
        android:maxLength="25"
        android:textSize="30sp"
        android:inputType="text"
        android:hint="@string/add_item_note_hint" />
    <TextView
        android:text="@string/add_item_purchased_on"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextPurchasedOnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:focusable="false"
        android:textSize="30sp"
        android:inputType="date"
        android:hint="@string/add_item_purchased_on_hint" />

</LinearLayout>